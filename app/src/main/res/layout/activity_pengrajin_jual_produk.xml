<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pengrajinJualProduk">

    <LinearLayout
        android:id="@+id/layoutInputProduk"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:translationZ="10dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_jualProduk"
            android:textSize="20dp"
            android:text="Masukkan Produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_produk"
            android:text="Produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_produk"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            android:hint="produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jumlah"
            android:layout_marginTop="5dp"
            android:text="Jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_jumlah"
            android:drawablePadding="20dp"
            android:hint="Jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_hargaProduk"
            android:text="Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_hargaProduk"
            android:drawablePadding="20dp"
            android:inputType="text"
            android:hint="Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_beratProduk"
            android:text="Berat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_berat"
            android:drawablePadding="20dp"
            android:inputType="text"
            android:hint="Berat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_kondisi"
            android:text="kondisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_kondisi"
            android:drawablePadding="20dp"
            android:inputType="text"
            android:hint="Kondisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_keterangan"
            android:text="Keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_keterangan"
            android:drawablePadding="20dp"
            android:inputType="text"
            android:hint="Keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_pesan"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:translationZ="12dp"
            android:text="Jual"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>