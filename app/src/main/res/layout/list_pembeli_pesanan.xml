<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Produk"
                android:textColor="#333"
                android:textSize="20dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_jumlah"
                android:layout_below="@id/tv_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah : 300"
                android:textColor="#333"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_estimasi"
                android:layout_below="@id/tv_jumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimasi : 20 hari"
                android:textColor="#333"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_verif"
                android:layout_below="@id/tv_estimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : verif"
                android:layout_alignParentRight="true"
                android:textColor="#333"
                android:textSize="15dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>