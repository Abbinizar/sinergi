<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.adminPembagianDetail"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_pembagian"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_pengrajin"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/tv_namaPengrajin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_pengrajin"
                android:text="Nama Pengrajin"
                android:textColor="#333"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_namaPengrajin"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_pengrajin"
                android:text="Lokasi Desa Sumbersari"
                android:textColor="#333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_pcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_lokasi"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_pengrajin"
                android:text="available 100 pcs"
                android:textColor="#333"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/durasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pcs"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_pengrajin"
                android:text="Durasi 30 hari"
                android:textColor="#333"
                android:textSize="15dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi"
            android:translationZ="5dp"
            android:textSize="11sp"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>
</LinearLayout>